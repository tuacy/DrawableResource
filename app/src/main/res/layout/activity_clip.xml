<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/view_progress"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_margin="8dp"
        android:background="@drawable/drawable_clip_progress"/>

    <ImageView
        android:id="@+id/image_clip"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="8dp"
        android:background="@drawable/drawable_clip"
        android:contentDescription="@string/app_name" />

    <Button
        android:id="@+id/button_level_0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Level 0"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/button_level_1000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Level 1000"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/button_level_8000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Level 8000"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/button_level_10000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Level 10000"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/button_level_animation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Level Animation"
        android:textAllCaps="false" />

</LinearLayout>