<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/button_drawable_resource_shape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="可绘制对象资源(shape)"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/button_drawable_resource_clip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="裁剪可绘制对象(clip)"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/button_drawable_resource_scale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="缩放可绘制对象(scale)"
        android:textAllCaps="false"/>


    <Button
        android:id="@+id/button_drawable_resource_inset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="插入可绘制对象（InsetDrawable ）"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/button_drawable_resource_level_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="级别列表（LevelListDrawable）"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/button_drawable_resource_layer_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="图层列表(LayerDrawable)"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/button_drawable_resource_transition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="转换可绘制对象（TransitionDrawable）"
        android:textAllCaps="false"/>

</LinearLayout>